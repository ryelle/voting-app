<div class="form">
  <h1>Log in</h1>
  
  <%= form_with url: login_path, scope: :session, local: true do |form| %>
    <div class="form-field">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>
    <div class="form-field">
      <%= form.label :password %>
      <%= form.text_field :password %>
    </div>

    <%= form.submit "Login", class: "button" %>
  <% end %>
</div>
